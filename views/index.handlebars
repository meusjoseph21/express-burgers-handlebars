
<div class="container">
<img src ="./assets/images/burgers.png">
<h1 class="text-center padding">Eat-Da-Burgers!</h1>
</div>

<div class= "container">

<div class= "col-12"></div>


<div class="row">
  <div class="col-5 card margin">

    <h2 class="text-center">Burgers to EAT!</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>

  </div>

  <div class="col-2"></div>

  <div class="col-5 card margin">
    <h2 class="text-center">Burgers Devoured!</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>

  </div>

</div>


<div class = "row">
  <div class = "col-12"></div>
</div>

<div class="row">
  <div class="col-4"></div>

  <div class="col-4 shadow">

    <h2 class = "text-center">Add a Burger</h2>
    <form class="create-form">

      <div class="form-group text-center">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
      </div> 

      <div class = "text-center">

           <button class = "btn btn-dark" type="submit">Add Burger</button>


      </>


   
    </form>


  </div>

  <div class="col-4"></div>



</div>

<div class = "row">

  <div class = "col-12">
    
  </div>
</div>

</div>
